<%- include ("partials/header") %>
<%- include ("partials/sidenav") %>

<!-- right content -->
<section class="content_right">
    <nav aria-label="breadcrumb" class="fil-ariane">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Accueil</a></li>
          <li class="breadcrumb-item"><a href="#"><%= product.category_id %></a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= product.title %></li>
        </ol>
      </nav>
    <div class="content_right_table">
      <h1 class="admin-title">
        Modification d'un produit                
    </h1>
    <form>
        <div class="form-group">
          <label for="title">Titre du produit</label>
          <input type="text" class="form-control" id="inputTitle" aria-describedby="titleHelp">
          <small id="titleHelp" class="form-text text-muted">Veuillez renseinger ou modifier le titre du produit. Le titre est obligatoire !</small>
        </div>
        <div class="mb-3">
            <label for="validationTextarea">Description</label>
            <textarea class="form-control" id="validationTextarea" placeholder="Tapez la description du produit"></textarea>
            <small id="titleHelp" class="form-text text-muted">
                Veuillez renseigner ou modifier la description du produit. La description, est obligatoire et vivement conseillée pour son référencement, et informer le client.
            </small>
        </div>
        <div class="form-group">
            <label for="title">Quantité en stock</label>
            <input type="number" class="form-control" id="inputTitle" data-decimals="2" min="0" max="9" step="1"/>
            <small id="titleHelp" class="form-text text-muted">
                Veuillez renseigner la quantité en stock de ce produit. La quantité de stock est obligatoire.
            </small>
        </div>
        <div class="form-group">
            <label for="title">Prix H.T.</label>
            <div class="input-group mb-3">
                
                <input type="text" class="form-control" aria-label="Prix H.T. (en euros)">
                <div class="input-group-append">
                <span class="input-group-text">€ H.T.</span>
                </div>
                
            </div>
            <small id="titleHelp" class="form-text text-muted">
                Veuillez renseigner le prix H.T. du produit. Le prix du produit H.T. est obligatoire.
            </small>
         </div>
        <div class="form-group">
            <label for="title">Prix T.T.C.</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" aria-label="Prix T.T.C (en euros)">
                <div class="input-group-append">
                    <span class="input-group-text">€ T.T.C</span>
                </div>   
                </div>
                <small id="titleHelp" class="form-text text-muted">
                    Veuillez renseigner le prix T.T.C du produit. Le prix du produit T.T.C est obligatoire.                        
                </small>
        </div>
        <div class="form-group">
            <label for="title">Identifiant de la catégorie</label>
            <input type="text" class="form-control" id="inputTitle" aria-describedby="titleHelp">
            <small id="titleHelp" class="form-text text-muted">Veuillez renseinger ou modifier l'identifiant de la catégorie du produit. Il est obligatoire !</small>
        </div>
        <button type="submit" class="btn btn-green">Enregistrer les modifications</button>
      </form>
    </div>
</section>
<!-- end of right content zone -->
</main>
<!-- end of main's content zone -->

<%- include ("partials/footer") %>