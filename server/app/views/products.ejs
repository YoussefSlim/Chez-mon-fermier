<%- include ("partials/header") %>
<%- include ("partials/sidenav") %>

<!-- right content -->
<section class="content_right">
    <h1 class="admin-title">
        Espace d'administration des produits du site
    </h1>
    <table class="table" style="text-align: center;">
        <thead class="bg-info">
          <tr>
            <th scope="col">N°</th>
            <th scope="col">Nom de la catégorie</th>
            <th scope="col">Prix HT</th>
            <th scope="col">Prix TTC</th>
            <th scope="col">Quantité</th>
            <th scope="col">Voir</th>
            <th scope="col">Ajouter</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
          </tr>
        </thead>
        <tbody>
          <form id="formCustomerElement" data-card-id="???" action="" method="POST" ></form>
          <% for (const product of products) { %>
          <tr>
            <th scope="row"><%= product.id %></th>
            <td><%= product.title %></td>
            <td><%= product.price_ht %></td>
            <td><%= product.price_ttc %></td>
            <td><%= product.quantity %></td>
            <td><a href="/admin/product/<%= product.id %>" class="text-dark"><i class="far fa-eye" aria-hidden="true"></i></a></td>
            <td><a href="/admin/product" class="text-success"><i class="fa fa-plus-circle" aria-hidden="true"></i></a></td>
            <td><a href="/admin/product/<%= product.id %>" class="text-warning"><i class="fas fa-edit"></i></a></td>
            <td><a href="/admin/product/<%= product.id %>" class="text-danger"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
          </tr>
          <% } %>
        </tbody>
      </table>

</section>
<!-- end of right content zone -->



</main>
<!-- end of main's content zone -->

<%- include ("partials/footer") %>